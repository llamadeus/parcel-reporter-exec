{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "esnext"],
    "types": ["node"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
